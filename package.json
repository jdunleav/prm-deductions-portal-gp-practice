{
  "name": "deductions-gp-portal-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.1",
    "nhsuk-frontend": "^2.3.2",
    "node-sass": "^4.13.0",
    "oidc-client": "^1.10.1",
    "react": "^16.10.2",
    "react-cookie": "^4.0.1",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0",
    "serve": "^11.2.0",
    "typescript": "^3.6.4",
    "yarn": "^1.19.1"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "react-scripts build",
    "start:react": "PORT=5000 react-scripts start",
    "serve:react": "npm run build && echo 'Serving pages on port 5000' && serve -p 5000 -s build",
    "start:server": "npm run build && nodemon ./server/server.js",
    "start": "npm run build && echo 'Launching server on port 443...' && node ./server/server.js | echo 'Running on port 443...' ",
    "test:react": "jest src",
    "test:server": "jest server",
    "test": "jest",
    "coverage": "jest --collectCoverage",
    "eject": "react-scripts eject",
    "test:access": "npm install --no-save puppeteer && wait-on http-get://127.0.0.1:5000 && pa11y-ci --config '.pa11yci.json'",
    "access": "concurrently --kill-others \"npm run serve:react\" \"npm run test:access\" -s first"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": -10
      }
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.7",
    "@testing-library/react": "^9.3.0",
    "concurrently": "^5.0.2",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "pa11y": "^5.3.0",
    "pa11y-ci": "^2.3.0",
    "portscanner": "^2.2.0",
    "supertest": "^4.0.2",
    "wait-on": "^3.3.0"
  }
}
